<!Doctype html>
<html>
    <head>
        <title>Bookmark Manager</title>
        <link href="/css/reset.css" rel="stylesheet" type="text/css">
        <link href="/css/style.css" rel="stylesheet" type="text/css">
        <meta charset="utf8">
    </head>
    <body>
        <div class="nav-bar">

            <div class="logo">
                <p>Bookmark Manager</p>
            </div>

            <div class="user-message">
                <% if current_user %>
                    <p>Welcome <%= current_user.email %></p>
                <% else %> 
                    <p>Welcome Guest</p>
                <% end %>
            </div>

            <div class="system-message">

                <% if flash[:errors] && !flash[:errors].empty? %>
                    <div class="errors">
                        <% flash[:errors].each do |error| %>
                            <p><%= error %></p>
                        <% end %>
                    </div>
                <% end %>
 
                <% if flash[:notice] %>
                    <div class="notices">
                        <p><%= flash[:notice] %></p>
                    </div>
                <% end %>                 

            </div>

            <div class="nav-buttons">
                <% if current_user %>
                    <form id="sign-out" method="post" action="/sessions">
                        <input type="hidden" name="_method" value="delete">
                        <input type="submit" id="sign-out" class="nav-button" value="Sign out">
                    </form>
                <% else %> 
                    <a href='/users/new' id='sign-up' class='nav-button'>Sign up</a>
                    <a href='/sessions/new' id='sign-in' class='nav-button'>Sign in</a>      
                <% end %>
                <a href='/' id='home' class='nav-button'>Home</a>                
            </div>

        </div>

        <div class="add-link">
 
            <% if current_user %>     
                <h3>Add a new link:</h3> 
                <div id="new-link">
                    <form action="/links" method="post">
                        <strong>Url:</strong><input class="text" type="text" name="url" value="http://" onfocus="this.value = this.value;" required autofocus>
                        <strong>Title:</strong><input class="text" type="text" name="title" required>
                        <strong>Tags:</strong><input class="text" type="text" name="tags">
                        <input class="input" type="submit" value="Add link">
                    </form>
                </div>
            <% end %> 

        </div>
 
        <div class="main-section">
    
            <%= yield %>

        </div>

        <div class="footer">
            
        </div>
    </body>
 </html>


  






