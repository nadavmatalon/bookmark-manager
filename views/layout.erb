<!Doctype html>
<html>
    <head>
        <title>Bookmark Manager</title>
        <link href="/css/reset.css" rel="stylesheet" type="text/css">
        <link href="/css/style.css" rel="stylesheet" type="text/css">
        <meta charset="utf8">
    </head>
    <body>
        <div class="nav-bar">

            <div class="logo">
                <p>Bookmark Manager</p>
            </div>

            <div class="user-message">
                <% if current_user %>
                    <p>Welcome <%= current_user.email %></p>
                <% else %> 
                    <p>Welcome Guest</p>
                <% end %>
            </div>

            <div class="system-message">

                <% if flash[:errors] && !flash[:errors].empty? %>
                    <div class="errors">
                        <% flash[:errors].each do |error| %>
                            <p><%= error %></p>
                        <% end %>
                    </div>
                <% end %>
 
                <% if flash[:notice] %>
                    <div class="notices">
                        <p><%= flash[:notice] %></p>
                    </div>
                <% end %>                 

            </div>

            <div class="nav-buttons">
                <% if current_user %>
                    <form id="sign-out" method="post" action="/sessions">
                        <input type="hidden" name="_method" value="delete">
                        <input type="submit" id="sign-out" class="nav-button" value="Sign out">
                    </form>
                <% else %> 
                    <a href='/users/new' id='sign-up' class='nav-button'>Sign up</a>
                    <a href='/sessions/new' id='sign-in' class='nav-button'>Sign in</a>      
                <% end %>
                <a href='/' id='home' class='nav-button'>Home</a>                
            </div>

        </div>

 
 
        <div class="main-section">
    
            <%= yield %>

        </div>

        <div class="footer">
            <div class="powered-by">
                <p>Powered by:</p>
            </div>
            <div class="images-container">
                <div class="image-box">
                    <a href='https://www.ruby-lang.org/en/'> 
                        <img src="https://raw.githubusercontent.com/nadavmatalon/bookmark-manager/master/public/images/ruby_small.png" height="50" width="50" />
                    </a>
                </div>
                <div class="image-box"> 
                    <a href='http://en.wikipedia.org/wiki/Test-driven_development'> 
                        <img src="https://raw.githubusercontent.com/nadavmatalon/bookmark-manager/master/public/images/tdd_small.png" height="55" width="55" />
                    </a>
                </div>
                <div class="image-box"> 
                    <a href='http://rspec.info/'> 
                        <img src="https://raw.githubusercontent.com/nadavmatalon/bookmark-manager/master/public/images/rspec_small.png" height="55" width="55" />
                    </a>
                </div>
                <div class="image-box"> 
                    <a href='http://www.w3schools.com/html/html5_intro.asp'> 
                        <img src="https://raw.githubusercontent.com/nadavmatalon/bookmark-manager/master/public/images/html5_small.png" height="55" width="55" />
                    </a>
                </div>
                <div class="image-box"> 
                    <a href='http://www.w3.org/TR/2001/WD-css3-roadmap-20010523/'>
                        <img src="https://raw.githubusercontent.com/nadavmatalon/bookmark-manager/master/public/images/css3_small.png" height="55" width="55" />
                    </a>
                </div>
                <div class="image-box"> 
                    <a href='http://www.sinatrarb.com/'>                 
                        <img src="https://raw.githubusercontent.com/nadavmatalon/bookmark-manager/master/public/images/sinatra_small.png" height="53" width="53" />
                    </a>
                </div>
                <div class="image-box"> 
                    <a href='http://www.postgresql.org/'> 
                        <img src="https://raw.githubusercontent.com/nadavmatalon/bookmark-manager/master/public/images/postresql_small.png" height="50" width="50" />
                    </a>
                </div>
                <div class="image-box">
                    <a href='https://github.com/nadavmatalon/bookmark-manager'>
                        <img src="https://raw.githubusercontent.com/nadavmatalon/bookmark-manager/master/public/images/github_small.png" height="50" width="50" />
                    </a>
                </div>
            </div>
            <div class="written-by">
                <p>Written by:</p>
            </div>
            <div class="avatar-container">
            <div class="avatar-box image-box">
                <a href='https://github.com/nadavmatalon'> 
                    <img src="https://raw.githubusercontent.com/nadavmatalon/bookmark-manager/master/public/images/nmqr_small.png" height="50" width="50" />
                </a>
            </div>
        </div>
    </body>
 </html>


  






